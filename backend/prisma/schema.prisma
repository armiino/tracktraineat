generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Gender {
  male
  female
}

model UserProfile {
  id       String @id @default(uuid())
  userId   String @unique
  age      Int
  weight   Int
  height   Int
  gender   Gender
  activity String
  goal     String
  dietType String
}

model User {
  id           String @id @default(uuid())
  email        String @unique
  passwordHash String
  role         String
}

